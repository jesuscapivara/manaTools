<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Maná Rodapés" Height="380" Width="420" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F0F0F0">
    
    <StackPanel Margin="20">
        <TextBlock Text="CRIAR RODAPÉS (LINE BASED)" FontWeight="Bold" FontSize="16" Foreground="#2C3E50"
                   Margin="0,0,0,15" HorizontalAlignment="Center"/>

        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="10" Background="White" Margin="0,0,0,15">
            <StackPanel>
                <Label Content="Tipo de Moldura (Wall Sweep):" FontWeight="SemiBold"/>
                <ComboBox Name="cb_sweep_type" Margin="0,0,0,10" Height="25"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <Label Content="Elevação do Nível (cm):" ToolTip="Altura em relação ao nível da sala"/>
                        <TextBox Name="tb_offset" Text="0" Height="25" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                        <CheckBox Name="chk_invert_flip" Content="Inverter Lado (Flip)" 
                                  ToolTip="Inverte a direção de criação da família (Dentro/Fora)."
                                  IsChecked="False" VerticalAlignment="Center" Margin="0,0,0,5"/>
                        <CheckBox Name="chk_force_cut" Content="Corte Automático" 
                                  ToolTip="Corte automático de portas (Geometria)."
                                  IsChecked="True" IsEnabled="False" VerticalAlignment="Center" Margin="0,5,0,5"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
        <Button Name="btn_create" Content="GERAR RODAPÉS" Height="40" 
                FontWeight="Bold" Background="#2C3E50" Foreground="White" 
                Cursor="Hand" Click="button_create_clicked"/>
                
        <TextBlock Text="Nota: Rodapés serão aplicados nas paredes dos ambientes selecionados." 
                   FontSize="10" Foreground="Gray" HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </StackPanel>
</Window>

