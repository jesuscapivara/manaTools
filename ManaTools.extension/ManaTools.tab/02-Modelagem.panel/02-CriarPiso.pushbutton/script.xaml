<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Maná Pisos" Height="480" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <StackPanel Margin="20">
        <TextBlock Text="CRIAR PISOS AUTOMÁTICOS" FontWeight="Bold" FontSize="16" 
                   Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <Label Content="Tipo de Piso:" FontWeight="Bold"/>
        <ComboBox Name="cb_floor_type" Margin="0,0,0,15" Height="25"/>
        
        <Label Content="Nível de Referência:" FontWeight="Bold"/>
        <ComboBox Name="cb_level" Margin="0,0,0,15" Height="25"/>
        
        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Deslocamento Altura (cm):" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Name="tb_offset" Text="0" Height="25" VerticalContentAlignment="Center"/>
        </Grid>

        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Avanço na Porta (cm):" VerticalAlignment="Center"
                   ToolTip="Quanto o piso da porta avança para dentro das salas (Overlap)"/>
            <TextBox Grid.Column="1" Name="tb_overlap" Text="5" Height="25" VerticalContentAlignment="Center"/>
        </Grid>
        
        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,20" CornerRadius="5">
            <StackPanel>
                <Label Content="Opções de Geometria:" FontWeight="Bold" Margin="0,0,0,5"/>
                <CheckBox Name="chk_merge" Content="Unir Geometria (Piso Único)" 
                          ToolTip="Se marcado, cria um único piso unindo todos os ambientes selecionados e suas portas."
                          Margin="0,5,0,5"/>
            </StackPanel>
        </Border>
        
        <Button Name="btn_create" Content="GERAR PISOS" Height="40" 
                FontWeight="Bold" Background="#2C3E50" Foreground="White" Click="button_create_clicked"/>
    </StackPanel>
</Window>
