<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Maná Uniões (Join)" Height="600" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F0F0F0">
    
    <StackPanel Margin="20">
        <TextBlock Text="UNIR ELEMENTOS (BULK JOIN)" FontWeight="Bold" FontSize="16" Foreground="#2C3E50"
                   Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="10" Background="White" Margin="0,0,0,15">
            <StackPanel>
                <Label Content="Modo de Operação:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                
                <RadioButton Name="rb_walls_floors" Content="Paredes x Pisos" IsChecked="True" Margin="0,5"/>
                <TextBlock Text="  (Recorta paredes onde tocam pisos)" FontSize="10" Foreground="Gray" Margin="20,0,0,5"/>
                
                <RadioButton Name="rb_walls_columns" Content="Paredes x Pilares" Margin="0,5"/>
                <TextBlock Text="  (Recorta paredes onde tocam pilares)" FontSize="10" Foreground="Gray" Margin="20,0,0,5"/>
                
                <RadioButton Name="rb_walls_framing" Content="Paredes x Vigas" Margin="0,5"/>
                <TextBlock Text="  (Recorta paredes onde tocam vigas)" FontSize="10" Foreground="Gray" Margin="20,0,0,5"/>

                <RadioButton Name="rb_walls_walls" Content="Paredes x Paredes" Margin="0,5"/>
                <TextBlock Text="  (Une paredes entre si)" FontSize="10" Foreground="Gray" Margin="20,0,0,5"/>
                
                <RadioButton Name="rb_selection_all" Content="Tudo x Tudo (Apenas Seleção)" Margin="0,5"/>
                <TextBlock Text="  (Tenta unir todos os elementos selecionados entre si)" FontSize="10" Foreground="Gray" Margin="20,0,0,5"/>
            </StackPanel>
        </Border>

        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="10" Background="White" Margin="0,0,0,15">
            <StackPanel>
                <Label Content="Escopo:" FontWeight="SemiBold"/>
                <RadioButton Name="rb_scope_selection" Content="Apenas Elementos Selecionados" IsChecked="True" Margin="0,5"/>
                <RadioButton Name="rb_scope_view" Content="Todos na Vista Atual" Margin="0,5"/>
            </StackPanel>
        </Border>
        
        <CheckBox Name="chk_switch_order" Content="Inverter Ordem de União" Margin="5,0,0,15"
                  ToolTip="Se marcado, inverte quem corta quem (Switch Join Order)"/>
        
        <Button Name="btn_run" Content="EXECUTAR UNIÕES" Height="45" 
                FontWeight="Bold" FontSize="14" Background="#2980B9" Foreground="White" 
                BorderThickness="0" Cursor="Hand" Click="button_run_clicked"/>
    </StackPanel>
</Window>
