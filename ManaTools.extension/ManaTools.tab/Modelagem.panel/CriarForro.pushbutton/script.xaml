<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Maná Forros e Tabicas" Height="620" Width="420" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F0F0F0">
    
    <StackPanel Margin="20">
        <TextBlock Text="CRIAR FORRO + TABICA" FontWeight="Bold" FontSize="18" Foreground="#2C3E50"
                   Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="10" Background="White" Margin="0,0,0,15">
            <StackPanel>
                <Label Content="Tipo de Forro (Gesso):" FontWeight="SemiBold"/>
                <ComboBox Name="cb_ceiling_type" Margin="0,0,0,10" Height="25"/>
                
                <Label Content="Altura do Forro (cm):" FontWeight="SemiBold"/>
                <TextBox Name="tb_height" Text="260" Height="25" VerticalContentAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="10" Background="White" Margin="0,0,0,20">
            <StackPanel>
                <Label Content="Família de Tabica (Line Based):" FontWeight="SemiBold"/>
                <ComboBox Name="cb_tabica_type" Margin="0,0,0,10" Height="25"/>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <Label Content="Recuo Gesso (cm):" ToolTip="Distância da parede até o início da placa de gesso"/>
                        <TextBox Name="tb_gesso_gap" Text="2.5" Height="25" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2">
                        <Label Content="Afastamento Tabica (cm):" ToolTip="Distância da parede até a linha da tabica (folga)"/>
                        <TextBox Name="tb_tabica_gap" Text="0" Height="25" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <Label Content="Desloc. Z Tabica (cm):" ToolTip="Ajuste de altura da tabica em relação ao forro (+ ou -)"/>
                        <TextBox Name="tb_tabica_z_offset" Text="0" Height="25" VerticalContentAlignment="Center" Width="100" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Grid>
                
                <Label Content="Opções de Inversão:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                <StackPanel Orientation="Vertical">
                    <CheckBox Name="chk_create_tabica" Content="Gerar Tabica 3D" IsChecked="True" Margin="0,5,0,0"/>
                    <CheckBox Name="chk_invert_tabica" Content="Inverter Horizontal (Dentro/Fora)" IsChecked="False" Margin="0,5,0,0"
                              ToolTip="Espelha a tabica horizontalmente (inverte a linha de criação)."/>
                    <CheckBox Name="chk_invert_z_tabica" Content="Inverter Vertical (Cima/Baixo)" IsChecked="False" Margin="0,5,0,0"
                              ToolTip="Espelha a tabica verticalmente (flip Z)."/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <Button Name="btn_create" Content="EXECUTAR AUTOMAÇÃO" Height="45" 
                FontWeight="Bold" FontSize="14" Background="#2980B9" Foreground="White" 
                BorderThickness="0" Cursor="Hand" Click="button_create_clicked"/>
                
        <TextBlock Text="Nota: Tabicas serão orientadas para o centro da sala." 
                   FontSize="10" Foreground="Gray" HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
