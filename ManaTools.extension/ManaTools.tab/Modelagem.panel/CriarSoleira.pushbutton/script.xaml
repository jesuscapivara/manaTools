<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Maná Soleiras" Height="400" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F0F0F0">
    
    <StackPanel Margin="20">
        <TextBlock Text="CRIAR SOLEIRAS (GRANITO)" FontWeight="Bold" FontSize="16" Foreground="#2C3E50"
                   Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="10" Background="White" Margin="0,0,0,15">
            <StackPanel>
                <Label Content="Tipo de Piso (Soleira):" FontWeight="SemiBold"/>
                <ComboBox Name="cb_floor_type" Margin="0,0,0,10" Height="25"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <Label Content="Folga Lateral (cm):" ToolTip="Quanto a soleira entra na parede (ambos os lados)"/>
                        <TextBox Name="tb_side_offset" Text="5" Height="25" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2">
                        <Label Content="Espessura Extra (cm):" ToolTip="Largura extra além da parede (pingadeira)"/>
                        <TextBox Name="tb_width_offset" Text="0" Height="25" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>
                
                <CheckBox Name="chk_join" Content="Unir com Parede (Cortar)" IsChecked="True" 
                          Margin="0,10,0,0" ToolTip="Remove o pedaço de parede sob a porta."/>
            </StackPanel>
        </Border>
        
        <Button Name="btn_create" Content="GERAR SOLEIRAS" Height="45" 
                FontWeight="Bold" FontSize="14" Background="#2980B9" Foreground="White" 
                BorderThickness="0" Cursor="Hand" Click="button_create_clicked"/>
    </StackPanel>
</Window>
