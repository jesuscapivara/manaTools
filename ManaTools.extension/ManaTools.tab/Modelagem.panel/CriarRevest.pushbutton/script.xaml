<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Maná Revestimentos 2.0" Height="520" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F0F0F0">
    
    <StackPanel Margin="20">
        <TextBlock Text="CRIAR REVESTIMENTO / PINTURA" FontWeight="Bold" FontSize="16" Foreground="#2C3E50"
                   Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="10" Background="White" Margin="0,0,0,15">
            <StackPanel>
                <Label Content="Tipo de Parede (Acabamento):" FontWeight="SemiBold"/>
                <ComboBox Name="cb_wall_type" Margin="0,0,0,15" Height="25"/>
                
                <Label Content="Nível Base:" FontWeight="SemiBold"/>
                <ComboBox Name="cb_base_level" Margin="0,0,0,5" Height="25"/>
                
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Deslocamento Base (cm):" VerticalAlignment="Center"
                           ToolTip="Altura do Rodapé ou Início da Pintura"/>
                    <TextBox Grid.Column="1" Name="tb_base_offset" Text="0" Height="25" VerticalContentAlignment="Center"/>
                </Grid>
                
                <Label Content="Nível Topo:" FontWeight="SemiBold"/>
                <ComboBox Name="cb_top_level" Margin="0,0,0,5" Height="25"/>
                
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Altura Desconectada (cm):" 
                           ToolTip="Usado apenas se Nível Topo for (Desconectado)"/>
                    <TextBox Grid.Column="1" Name="tb_height" Text="280" Height="25" VerticalContentAlignment="Center"/>
                </Grid>

                <CheckBox Name="chk_join" Content="Unir com Alvenaria (Cortar Vãos)" 
                          IsChecked="True" FontWeight="Bold" Foreground="#E67E22" Margin="0,5,0,0"
                          ToolTip="Essencial para Portas e Janelas furarem o revestimento automaticamente."/>
            </StackPanel>
        </Border>
        
        <Button Name="btn_create" Content="GERAR REVESTIMENTO" Height="45" 
                FontWeight="Bold" FontSize="14" Background="#2C3E50" Foreground="White" 
                BorderThickness="0" Cursor="Hand" Click="button_create_clicked"/>
    </StackPanel>
</Window>