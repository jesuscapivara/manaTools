<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sobre o ManaTools" Height="280" Width="450" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Cabeçalho -->
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,20">
            <TextBlock Text="ManaTools" FontSize="24" FontWeight="Bold" 
                       Foreground="#2C3E50" HorizontalAlignment="Center"/>
            <TextBlock x:Name="version_text" Text="Versão" 
                       FontSize="14" Foreground="#7F8C8D" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Conteúdo -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <TextBlock Text="Desenvolvido para fluxos BIM ágeis" 
                       FontSize="12" Foreground="#34495E" 
                       HorizontalAlignment="Center" TextWrapping="Wrap" 
                       TextAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="© 2025 ManaTools" 
                       FontSize="10" Foreground="#95A5A6" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Botão -->
        <Button Grid.Row="2" x:Name="close_btn" Content="Fechar" 
                Width="100" Height="32" 
                Background="#3498DB" Foreground="White" 
                BorderThickness="0" FontSize="13" FontWeight="SemiBold"
                HorizontalAlignment="Center" Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2980B9"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>

