<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Checar Atualização" Height="320" Width="480" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Cabeçalho -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,10,0,20">
            <TextBlock Text="Verificação de Atualização" FontSize="20" FontWeight="Bold" 
                       Foreground="#2C3E50" HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Conteúdo -->
        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center">
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Versão instalada:" 
                           FontSize="13" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,8"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="local_ver" Text="" 
                           FontSize="13" Foreground="#7F8C8D" Margin="0,0,0,8"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Versão disponível:" 
                           FontSize="13" FontWeight="SemiBold" Foreground="#34495E"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="remote_ver" Text="" 
                           FontSize="13" Foreground="#7F8C8D"/>
            </Grid>
            
            <Border x:Name="msg_border" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="0,15,0,0" 
                    Visibility="Collapsed">
                <TextBlock x:Name="msg_text" Text="" FontSize="12" 
                           Foreground="#555" TextWrapping="Wrap" FontStyle="Italic"/>
            </Border>
            
            <TextBlock x:Name="status_text" Text="" FontSize="13" FontWeight="SemiBold"
                       HorizontalAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
        
        <!-- Botões -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="download_btn" Content="Baixar Atualização" 
                    Width="150" Height="32" Margin="0,0,10,0"
                    Background="#27AE60" Foreground="White" 
                    BorderThickness="0" FontSize="13" FontWeight="SemiBold"
                    Cursor="Hand" Visibility="Collapsed">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button x:Name="close_btn" Content="Fechar" 
                    Width="100" Height="32" 
                    Background="#3498DB" Foreground="White" 
                    BorderThickness="0" FontSize="13" FontWeight="SemiBold"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>

