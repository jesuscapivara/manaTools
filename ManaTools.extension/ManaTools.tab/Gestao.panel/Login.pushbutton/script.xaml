<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Maná Login" Height="350" Width="320" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F0F0F0">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Grid.Row="0" Text="MANÁ TOOLS" FontWeight="Bold" FontSize="20" 
                   Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- LOGIN FORM -->
        <StackPanel Grid.Row="1" Name="panel_login">
            <Label Content="E-mail:" FontWeight="SemiBold"/>
            <TextBox Name="tb_email" Height="30" Margin="0,0,0,10" VerticalContentAlignment="Center"/>
            
            <Label Content="Senha:" FontWeight="SemiBold"/>
            <PasswordBox Name="pb_password" Height="30" Margin="0,0,0,15" VerticalContentAlignment="Center"/>
            
            <Button Name="btn_login" Content="ENTRAR" Height="40" 
                    FontWeight="Bold" Background="#2980B9" Foreground="White" 
                    BorderThickness="0" Cursor="Hand" Click="button_login_clicked"/>
            
            <TextBlock Name="lbl_status" Text="" Foreground="Red" Margin="0,10,0,0" 
                       TextWrapping="Wrap" HorizontalAlignment="Center"/>
            
            <TextBlock Margin="0,15,0,0" HorizontalAlignment="Center" Cursor="Hand" MouseLeftButtonUp="link_register_clicked">
                <Underline Foreground="Gray">Criar Conta ou Recuperar Senha</Underline>
            </TextBlock>
        </StackPanel>
        
        <!-- LOGGED IN VIEW (Hidden by default) -->
        <StackPanel Grid.Row="1" Name="panel_info" Visibility="Collapsed">
            <Border Background="#E8F6F3" BorderBrush="#27AE60" BorderThickness="1" CornerRadius="5" Padding="15">
                <StackPanel>
                    <TextBlock Text="Conectado como:" FontSize="10" Foreground="Gray"/>
                    <TextBlock Name="txt_user_email" Text="user@email.com" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    
                    <Separator Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Status da Licença:" FontSize="10" Foreground="Gray"/>
                    <TextBlock Name="txt_license_status" Text="PRO (Ativo)" FontWeight="Bold" Foreground="#27AE60" FontSize="16"/>
                </StackPanel>
            </Border>
            
            <Button Name="btn_logout" Content="SAIR (LOGOUT)" Height="35" Margin="0,20,0,0"
                    Background="#E74C3C" Foreground="White" BorderThickness="0" 
                    Cursor="Hand" Click="button_logout_clicked"/>
        </StackPanel>

        <!-- FOOTER -->
        <TextBlock Grid.Row="2" Text="v2.0 - Maná Engenharia" FontSize="10" Foreground="Gray" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </Grid>
</Window>
